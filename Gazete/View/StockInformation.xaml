        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox materialDesign:HintAssist.Hint="İsme Göre Ara"/>
            <Button Grid.Column="1" Content="Ara" Margin="10,0"/>
        </Grid>
        <ListView Grid.Row="1"/>
    </Grid>
