<UserControl x:Class="Gazete.View.SafeInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gazete.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="203.008">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Toplam Nakit Gelir" VerticalAlignment="Center"/>
        <TextBlock Text="Toplam Kredi Kartı Gelir" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock Text="Toplam Gelir" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBlock Text="Toplam Gider" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBlock Text="Kasa" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="2"/>
        <TextBox Grid.Column="1" Grid.Row="3"/>
        <TextBox Grid.Column="1" Grid.Row="4"/>
    </Grid>
</UserControl>
